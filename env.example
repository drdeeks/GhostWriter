# =============================================================================
# GHOST WRITER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit real values to version control!

# =============================================================================
# DEPLOYMENT & WALLET CONFIGURATION
# =============================================================================

# Private key for contract deployment (NEVER commit real private key!)
PRIVATE_KEY=your_private_key_here

# Alternative: Keystore file for deployment
KEYSTORE_PATH=path/to/your/keystore.json
KEYSTORE_PASSWORD=your_keystore_password

# =============================================================================
# BLOCKCHAIN RPC URLs
# =============================================================================

# Base Network
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Monad Network
MONAD_TESTNET_RPC_URL=https://testnet-rpc.monad.xyz
MONAD_RPC_URL=https://rpc.monad.xyz

# =============================================================================
# BLOCK EXPLORER API KEYS (for contract verification)
# =============================================================================

BASESCAN_API_KEY=your_basescan_api_key
MONAD_EXPLORER_API_KEY=your_monad_explorer_api_key

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# CoinMarketCap API Key (for gas reporting)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# OnchainKit API Key (for Coinbase OnchainKit)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key
NEXT_PUBLIC_ONCHAINKIT_PROJECT_ID=your_onchainkit_project_id

# =============================================================================
# DEPLOYMENT FLAGS & CONFIGURATION
# =============================================================================

# Enable gas reporting during tests
REPORT_GAS=false

# =============================================================================
# DEPLOYED CONTRACT ADDRESSES (fill after deployment)
# =============================================================================

# Contract addresses from deployment scripts
NFT_CONTRACT_ADDRESS=
STORY_MANAGER_ADDRESS=
LIQUIDITY_POOL_ADDRESS=

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# (NEXT_PUBLIC_ prefix makes them available to the browser)

# Contract addresses for frontend
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=
NEXT_PUBLIC_STORY_MANAGER_ADDRESS=
NEXT_PUBLIC_LIQUIDITY_POOL_ADDRESS=

# Blockchain configuration
NEXT_PUBLIC_CHAIN_ID=84532

# NFT Metadata URIs
NEXT_PUBLIC_HIDDEN_BASE_URI=ipfs://QmHiddenMetadata/
NEXT_PUBLIC_REVEALED_BASE_URI=ipfs://QmRevealedMetadata/

# Application URL (for testing)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
#
# 1. After deploying contracts, copy addresses to both script and frontend variables
# 2. For production, update NEXT_PUBLIC_CHAIN_ID to mainnet chain ID
# 3. Keep private keys and API keys secure - never commit to version control
# 4. Use different API keys for testnet vs mainnet deployments
# 5. Update metadata URIs after uploading to IPFS
